@model IEnumerable<CrudConsumoMiniMarket.Models.Productos>

@{
    ViewBag.Title = "Listado de Productos";
}

<h2 class="text-info">Listado de Productos</h2>

<p>

    <a href="@Url.Action("Crear","Productos")"  class="btn btn-success" role="button"><i class="glyphicon glyphicon-plus"></i> Crear Nuevo</a>
</p>
<table class="table">
    <tr>
        <th>
            Código Producto
        </th>
        <th>
            Descripción
        </th>
        <th>
            Categoria
        </th>
        <th>
            Proveedor
        </th>
        <th>
            Marca
        </th>
        <th>
            Medidas
        </th>
        <th>
            Cantidad
        </th>
        <th class="text-right">
            Precio Unitario
        </th>
        <th></th>
    </tr>

    @if (Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Codigo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Categorias.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Proveedores.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Marca)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Medida)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Cantidad)
                </td>
                <td class="text-right">
                    @Html.DisplayFor(modelItem => item.PrecioUnitario)
                </td>
                <td>
                    <a href="@Url.Action("Editar","Productos",new { id = item.IdProducto })" class="btn btn-primary btn-xs" title="Editar" ><i class="glyphicon glyphicon-edit"></i></a> 
                    <a href="@Url.Action("Eliminar","Productos",new { id = item.IdProducto })" class="btn btn-danger btn-xs" title="Eliminar" ><i class="glyphicon glyphicon-trash"></i> </a>

                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="9">
                <label id="lblNoData" class="text-warning"> No existen registro para mostrar.</label>
            </td>
        </tr>
    }

</table>
